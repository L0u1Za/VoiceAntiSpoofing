{
  "name": "one_batch_test",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 22050,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "HiFiGAN",
    "args": {
      "h_u": 512,
      "k_u": [16,16,4,4],
      "k_r": [3,7,11],
      "d_r": [[1,3,5], [1,3,5], [1,3,5]]
    }
  },
  "data": {
    "train": {
      "batch_size": 1,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "data_dir": "/kaggle/working/",
            "part": "train",
            "max_audio_length": 3.0,
            "max_text_length": 50,
            "limit": 1
          }
        }
      ]
    },
    "val": {
      "batch_size": 3,
      "datasets": [
        {
          "type": "CustomDirAudioDataset",
          "args": {
            "audio_dir": "/kaggle/input/dla-nv/test_data/audio",
            "transcription_dir": "/kaggle/input/dla-nv/test_data/transcriptions"
          }
        }
      ]
    },
    "test": {
      "batch_size": 1,
      "num_workers": 0,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "data_dir": "/kaggle/working/",
            "part": "test",
            "max_audio_length": 3.0,
            "max_text_length": 50,
            "limit": 1
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-3
    }
  },
  "loss": {
    "type": "FinalLoss",
    "args": {
      "alpha_fm": 2,
      "alpha_mel": 45
    }
  },
  "metrics": [
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 200,
      "anneal_strategy": "cos",
      "max_lr": 3e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 200,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "nv_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
